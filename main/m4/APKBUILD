# Maintainer: Damir Holovati
pkgname=m4
pkgver=1.4.20
pkgrel=0
pkgdesc="GNU macro processor"
url="https://www.gnu.org/software/m4"
arch="all"
license="GPL-3.0-or-later"
makedepends="texinfo"
checkdepends="diffutils"
subpackages="$pkgname-doc"
source="https://ftp.gnu.org/gnu/m4/m4-$pkgver.tar.gz
	format-security.patch
	"
prepare() {
	default_prepare
	update_config_sub
	update_config_guess
	update_configure
}

build() {
	CPPFLAGS="-D__linux__" \
	CFLAGS="-pipe" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-rpath
	make ACLOCAL=: AUTOMAKE=: AUTOHEADER=: HELP2MAN=:
}

check() {
	# SUBDIRS="checks": Run m4 tests only without gnulib tests.
	make SUBDIRS="checks" check ACLOCAL=: AUTOMAKE=: AUTOHEADER=: HELP2MAN=:
}

package() {
	make DESTDIR="$pkgdir" install ACLOCAL=: AUTOMAKE=: AUTOHEADER=: HELP2MAN=:
}

sha512sums="
0db92e37b984bcac0e640bccb9d3463757793b1fef665601f6d8052906d1ed26078af37c751e3e0cd9ee8d9ff165e51cfe9560422a5b3559f4b58de446b7429c  m4-1.4.20.tar.gz
33d76170cb506332cdda09faf1cf2b4d8adc42ee138fb55bb0f212990df892d5713d25cd7ad08ab9212db55439fd60ca32fd2b02c1c1e3f9a0b72f165f792582  format-security.patch
"
