# Maintainer: Damir Holovati
pkgname=wget
pkgver=1.25.0
pkgrel=0
pkgdesc="Network utility to retrieve files from the Web"
url="https://www.gnu.org/software/wget/wget.html"
arch="all"
license="GPL-3.0-or-later WITH OpenSSL-Exception"
makedepends="
	openssl-dev
	pcre2-dev
	perl
	zlib-dev
	"
checkdepends="perl-http-daemon"
subpackages="$pkgname-doc"
source="https://mirror.dotsrc.org/gnu/wget/wget-$pkgver.tar.gz"

prepare() {
	default_prepare
	update_config_sub
	update_config_guess
	update_configure
}

build() {
	CFLAGS="$CFLAGS -pipe" \
	CPPFLAGS="$CPPFLAGS -D__linux__" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--with-ssl=openssl \
		--disable-rpath \
		--disable-nls \
		--disable-threads
	make ACLOCAL=: AUTOMAKE=:
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install ACLOCAL=: AUTOMAKE=:
}

sha512sums="
a7ce33c07a1a206a8574b6e9ea7cc5292315df0914edbcf05a014d35ae9e3d24699a46818b409b884ada57428cf30502f4bbb3767cae2c6934e4e7fb2d0c5036  wget-1.25.0.tar.gz
"
