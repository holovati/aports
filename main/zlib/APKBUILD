# Contributor: Damir Holovati
# Maintainer: Damir Holovati
pkgname=zlib
pkgver=1.3.1
pkgrel=0
pkgdesc="A compression/decompression library"
url="https://zlib.net"
arch="all"
license="Zlib"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc"
source="https://zlib.net/fossils/zlib-$pkgver.tar.gz"

build() {
	./configure \
		--prefix=/usr \
		--shared
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
